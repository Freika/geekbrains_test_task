h1 = "#{@course.title} course"

p = link_to 'Join this course!', course_participations_path(course)

- if @course.groups.upcoming.any?
  h3 Upcoming groups
  table border=1
    tr
      th Starts on
      th Students participating
    - @course.groups.upcoming.each do |group|
      tr
        td = group.starts_on
        td 0
- else
  p There are no upcoming groups for this course
